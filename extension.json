{
	"name": "WP25EasterEggs",
	"author": [
		"Artem Titkov"
	],
	"url": "https://www.mediawiki.org/wiki/Extension:WP25EasterEggs",
	"descriptionmsg": "wp25EasterEggs-desc",
	"license-name": "GPL-2.0-or-later",
	"type": "other",
	"requires": {
		"MediaWiki": ">= 1.45.0"
	},
	"AutoloadNamespaces": {
		"MediaWiki\\Extension\\WP25EasterEggs\\": "src/"
	},
	"HookHandlers": {
		"WP25EasterEggsHooks": {
			"class": "MediaWiki\\Extension\\WP25EasterEggs\\Hooks",
			"services": [
				"MainConfig",
				"UserOptionsLookup",
				"SpecialPageFactory"
			],
			"optional_services": [
				"CommunityConfiguration.MediaWikiConfigReader",
				"WikibaseClient.Store",
				"WikibaseClient.Settings"
			]
		}
	},
	"Hooks": {
		"BeforePageDisplay": "WP25EasterEggsHooks",
		"GetPreferences": "WP25EasterEggsHooks",
		"SiteNoticeAfter": "WP25EasterEggsHooks"
	},
	"MessagesDirs": {
		"WP25EasterEggs": [
			"i18n"
		]
	},
	"config": {
		"Wp25EasterEggsEnable": {
			"description": "Enable the easter eggs feature.",
			"value": false
		},
		"Wp25EasterEggsEnableDefaultState": {
			"description": "Enable showing the default version of companion on pages that do not have a specific special version of the companion configured for them.",
			"value": false
		}
	},
	"attributes": {
		"CommunityConfiguration": {
			"Providers": {
				"WP25EasterEggs": {
					"store": {
						"type": "wikipage",
						"args": [
							"MediaWiki:WP25EasterEggsConfig.json"
						]
					},
					"validator": {
						"type": "jsonschema",
						"args": [
							"MediaWiki\\Extension\\WP25EasterEggs\\CommunityConfigurationSchema"
						]
					},
					"type": "mw-config"
				}
			}
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "WP25EasterEggs"
	},
	"ResourceModules": {
		"ext.wp25EasterEggs.styles": {
			"styles": [
				"resources/ext.wp25EasterEggs/style.css"
			]
		},
		"ext.wp25EasterEggs": {
			"localBasePath": "resources/ext.wp25EasterEggs",
			"remoteExtPath": "WP25EasterEggs/resources/ext.wp25EasterEggs",
			"dependencies": [
				"mediawiki.user"
			],
			"styles": [
				"style.css"
			],
			"packageFiles": [
				{ "name": "init.js", "main": true },
				"companion/Companion.js",
				"companion/CompanionConfig.js",
				"core/ClientPrefsHandler.js",
				"core/ImagePlayer.js",
				"core/VideoContainer.js",
				"core/VideoPlayer.js",
				"interactions/ClickHandler.js",
				"utils/BreakpointResolver.js",
				"utils/ColorSchemeResolver.js",
				"companionConfigs.js"
			],
			"messages": [
				"wp25EasterEggs-desc",
				"wp25eastereggs-enable-name",
				"wp25eastereggs-enable-label",
				"wp25eastereggs-enable-description",
				"wp25eastereggs-enable-help",
				"wp25eastereggs-enable-0-label",
				"wp25eastereggs-enable-1-label",
				"wp25eastereggs-enable-learn-more-link-label",
				"wp25eastereggs-enable-learn-more-link-url"
			]
		},
		"ext.wp25EasterEggs.config": {
			"localBasePath": "resources/ext.wp25EasterEggs.config",
			"remoteExtPath": "WP25EasterEggs/resources/ext.wp25EasterEggs.config",
			"dependencies": [
				"mediawiki.jqueryMsg"
			],
			"styles": [
				"config.less"
			],
			"packageFiles": [
				{ "name": "config.js", "main": true },
				"domUtils.js"
			],
			"messages": [
				"communityconfiguration-wp25eastereggs-description",
				"communityconfiguration-wp25eastereggs-additional-description",
				"communityconfiguration-wp25eastereggs-modeconfiguration-section-label",
				"communityconfiguration-wp25eastereggs-modeconfiguration-section-description"
			]
		},
		"ext.wp25EasterEggs.minervaLaunchBanner": {
			"localBasePath": "resources/ext.wp25EasterEggs.minervaLaunchBanner",
			"remoteExtPath": "WP25EasterEggs/resources/ext.wp25EasterEggs.minervaLaunchBanner",
			"dependencies": [
				"ext.wp25EasterEggs.minervaLaunchBanner.codexModules"
			],
			"styles": [
				"minervaLaunchBanner.less"
			],
			"packageFiles": [
				{ "name": "minervaLaunchBanner.js", "main": true }
			],
			"messages": [
				"extension-wp25eastereggs-minerva-launch-banner-title",
				"extension-wp25eastereggs-minerva-launch-banner-close-label",
				"extension-wp25eastereggs-minerva-launch-banner-description",
				"extension-wp25eastereggs-minerva-launch-banner-settings-label"
			]
		},
		"ext.wp25EasterEggs.minervaLaunchBanner.codexModules": {
			"class": "MediaWiki\\ResourceLoader\\CodexModule",
			"codexStyleOnly": true,
			"codexComponents": [
				"CdxDialog"
			]
		}
	},
	"manifest_version": 2
}
